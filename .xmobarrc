Config { font = "-misc-fixed-*-*-*-*-18-*-*-*-*-*-*-*"
	, bgColor = "black"
	, fgColor = "grey"
	, position = Top
	, lowerOnStart = True
	, commands = [ Run Weather "EGPF" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
		, Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 12
		, Run Network "wlan0" ["-L","0","-H","32","--normal","green","--high","red"] 12
		, Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 12
		, Run Memory ["-t","Mem: <usedratio>%"] 12
		, Run Swap [] 12
		, Run Com "uname" ["-s","-r"] "" 36000
		, Run Date "%a %b %_d %Y" "date" 12
		, Run BatteryP ["BAT0"] ["-t", "<acstatus><watts> (<left>%)", "-L", "10", "-H", "80", "-p", "3", "--", "-O", "<fc=green>On</fc> - ", "-o", "", "-L", "-15", "-H", "-5", "-l", "red", "-m", "blue", "-h", "green"] 600
		]
	, sepChar = "%"
	, alignSep = "}{"
	, template = "%cpu% | %memory% * %swap% | %eth0% - %wlan0% }{ <fc=#ee9a00>%date%</fc>%uptime% | %battery%"
	}
